# Hub Chantier - Configuration
# Copier ce fichier vers .env et adapter les valeurs

# Application
APP_NAME="Hub Chantier"
DEBUG=true

# Database
DATABASE_URL=sqlite:///./data/hub_chantier.db

# Security - IMPORTANT: Changer en production !
SECRET_KEY=your-super-secret-key-at-least-32-characters-long

# Token JWT - Durées de vie
# DEV: ACCESS_TOKEN_EXPIRE_MINUTES=480 (8h - confort tests)
# PROD: ACCESS_TOKEN_EXPIRE_MINUTES=120 (2h avec refresh auto)
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_HOURS=24
ADMIN_TOKEN_EXPIRE_MINUTES=60

# CORS - Origines autorisées (séparées par des virgules)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

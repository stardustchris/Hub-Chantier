# Hub Chantier - Production-like Local Environment
# Copier vers .env.production-local et adapter les valeurs
#
# Usage: docker compose --env-file .env.production-local up

# Application
APP_NAME="Hub Chantier"
DEBUG=false

# PostgreSQL Database
POSTGRES_USER=hubchantier
POSTGRES_PASSWORD=CHANGE_ME_secure_password_123!
POSTGRES_DB=hub_chantier

# Security - IMPORTANT: Use strong random values!
SECRET_KEY=CHANGE_ME_production_key_should_be_very_long_and_random_64chars
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS - Origines autorisees (production-like)
CORS_ORIGINS=http://localhost

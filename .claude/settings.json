{
  "projectContext": "Hub Chantier - Application de gestion de chantiers BTP suivant Clean Architecture",
  "codeStyle": {
    "language": "python",
    "docstrings": "google",
    "typeHints": true
  },
  "architecture": {
    "pattern": "clean-architecture",
    "layers": ["domain", "application", "adapters", "infrastructure"],
    "dependencyRule": "inward-only"
  },
  "agents": {
    "autoReviewArchitecture": true,
    "autoGenerateTests": true,
    "autoCheckQuality": true
  },
  "sessionManagement": {
    "stateFile": "CLAUDE.md",
    "updateAfter": [
      "module-completed",
      "significant-commit",
      "user-says-stop"
    ],
    "readOnStart": [
      "CLAUDE.md",
      "CONTEXT.md",
      ".claude/agents.md"
    ]
  }
}
